from Tkinter import *
from Tkinter import Frame, Entry, Tk
import sqlite3
from sqlite3 import Error

root = Tk()
root.title("Three Frames")

#Creating 3 frames
frame1 = Frame(root, highlightbackground="blue", highlightcolor="blue", highlightthickness=1 , width=1000, height =100, bd =0)
frame1.pack()
frame2 = Frame(root, highlightbackground="blue", highlightcolor="blue", highlightthickness=1 ,width=1000, height =500)
frame2.pack()
frame3 = Frame(root, highlightbackground="blue", highlightcolor="blue",highlightthickness=1, width=1000, height =100)
frame3.pack()
frame4 = Frame(root, highlightbackground="blue", highlightcolor="blue",highlightthickness=1, width=1000, height =100)
frame4.pack()
root.mainloop()